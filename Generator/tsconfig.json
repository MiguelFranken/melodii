{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
